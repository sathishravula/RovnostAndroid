<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ehc.rovnostandroid">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:name=".app.RovnostApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.LandingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.DashBoardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.DoctorsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.RequestConsultationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MyProfile"
            android:label="@string/title_activity_my_profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ChangePassword"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
