<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    >
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/card1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"

            >

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pic"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:civ_fill_color="@android:color/black" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image"
                android:text="Dr.Ajay Kumar"
                android:textColor="#CC0033"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="20dp"
                android:text="Rate this Doctor"
                android:textSize="14dp" />
            <View
                android:layout_width="200dp"
                android:background="#e3e3e3"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/rate"
                android:layout_height="1dp"/>

            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:numStars="5"
                android:rating="1"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/rate"
                android:layout_below="@+id/title"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
               />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingBar1"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="20dp"
                android:text="Fever,Cold and Cough"
                android:textSize="14dp" />
            <View
                android:layout_width="200dp"
                android:background="#e3e3e3"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/title"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/total_count"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/price"
                android:layout_marginLeft="20dp"
                android:text="28-01-2016 - sunday - 11:00 am"
                android:textSize="14dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_marginTop="20dp"
        android:id="@+id/card2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pic"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:civ_fill_color="@android:color/black" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image1"
                android:text="Dr.Sushmitha "
                android:textColor="#CC0033"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/rate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/image1"
                android:layout_marginLeft="20dp"
                android:text="You Have Rated"
                android:textSize="14dp" />
            <View
                android:layout_width="200dp"
                android:background="#e3e3e3"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image1"
                android:layout_below="@+id/rate1"
                android:layout_height="1dp"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/rate1"
                android:layout_below="@+id/title1"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingBar"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/image1"
                android:layout_marginLeft="20dp"
                android:text="Fever,Cold and Cough"
                android:textSize="14dp" />
            <View
                android:layout_width="200dp"
                android:background="#e3e3e3"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image1"
                android:layout_below="@+id/title1"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/total_count1"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image1"
                android:layout_below="@+id/price1"
                android:layout_marginLeft="20dp"
                android:text="24-01-2016 - sunday - 11:00 am"
                android:textSize="14dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>